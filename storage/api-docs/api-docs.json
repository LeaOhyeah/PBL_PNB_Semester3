    "paths": {
        "/api/news/home": {
            "get": {
                "tags": [
                    "News"
                ],
                "summary": "Mendapatkan latest_news dan segment jika menggunakan /home, terdapat parameter seperti slug, title, author dan tag yang mengembalikan pagination, terdapat parameter id yang mengembalikan news (detail berita) dan related_news",
                "operationId": "19c6d94327b5431f5843d6c333ad9c1e",
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "description": "ID of the news item to fetch (optional)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "8cc48c8c-949b-478c-a7d7-3e8b33e4e204"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Limit the number of latest news items (default: 5)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 5
                        }
                    },
                    {
                        "name": "limitPaginate",
                        "in": "query",
                        "description": "Limit the number of paginated news items per page (default: 25)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 25
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number for paginated results (default: 1)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "slug",
                        "in": "query",
                        "description": "Category slug to filter news by category",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "prestasi"
                        }
                    },
                    {
                        "name": "title",
                        "in": "query",
                        "description": "Title keyword to filter news by title",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "breaking news"
                        }
                    },
                    {
                        "name": "author",
                        "in": "query",
                        "description": "Author name to filter news by author",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "John Doe"
                        }
                    },
                    {
                        "name": "tag",
                        "in": "query",
                        "description": "Tag name to filter news by tag",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "technology"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "version": {
                                            "type": "number",
                                            "example": 3.1
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "code": {
                                            "type": "integer",
                                            "example": 200
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": ""
                                        },
                                        "page": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "total": {
                                            "type": "integer",
                                            "example": 10
                                        },
                                        "next_url": {
                                            "type": "string",
                                            "example": "http://example.com/api/news/home?slug=prestasi&title=example+title&limitPaginate=10&page=2"
                                        },
                                        "prev_url": {
                                            "type": "string",
                                            "example": "http://example.com/api/news/home?slug=prestasi&title=example+title&limitPaginate=10&page=1"
                                        },
                                        "data": {
                                            "properties": {
                                                "latest_news": {
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "#/components/schemas/NewsItem"
                                                    }
                                                },
                                                "segment": {
                                                    "type": "array",
                                                    "items": {
                                                        "properties": {
                                                            "id": {
                                                                "type": "integer",
                                                                "example": 123
                                                            },
                                                            "name": {
                                                                "type": "string",
                                                                "example": "Prestasi"
                                                            },
                                                            "slug": {
                                                                "type": "string",
                                                                "example": "prestasi"
                                                            },
                                                            "news": {
                                                                "type": "array",
                                                                "items": {
                                                                    "$ref": "#/components/schemas/NewsItem"
                                                                }
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "version": {
                                            "type": "number",
                                            "example": 3.1
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "code": {
                                            "type": "integer",
                                            "example": 400
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid input parameter"
                                        },
                                        "errors": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "The limit and page parameters must be positive integers."
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/categories": {
            "get": {
                "tags": [
                    "Categories"
                ],
                "summary": "Get list of categories",
                "operationId": "18dbd6cb8d98cfb468e19e2a80367d49",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Limit the number of categories",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "version": {
                                            "type": "number",
                                            "example": 3.1
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "code": {
                                            "type": "integer",
                                            "example": 200
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Categories fetched successfully"
                                        },
                                        "total": {
                                            "type": "integer",
                                            "example": 5
                                        },
                                        "data": {
                                            "properties": {
                                                "list": {
                                                    "type": "array",
                                                    "items": {
                                                        "properties": {
                                                            "id": {
                                                                "type": "integer",
                                                                "example": 1
                                                            },
                                                            "name": {
                                                                "type": "string",
                                                                "example": "Technology"
                                                            },
                                                            "slug": {
                                                                "type": "string",
                                                                "example": "technology"
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "version": {
                                            "type": "number",
                                            "example": 3.1
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "code": {
                                            "type": "integer",
                                            "example": 400
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid input parameter"
                                        },
                                        "errors": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "The limit parameter must be a positive integer."
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "NewsItem": {
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "kasdbf734ijwkhdb"
                    },
                    "title": {
                        "type": "string",
                        "example": "Sample News Title"
                    },
                    "content_url": {
                        "type": "string",
                        "example": "image_back_end.png"
                    },
                    "short_desc": {
                        "type": "string",
                        "example": "Short description here"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-12-25T09:50:49.000Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-12-28T11:27:50.422Z"
                    },
                    "segment": {
                        "type": "string",
                        "example": "prestasi"
                    },
                    "category": {
                        "properties": {
                            "id": {
                                "type": "integer",
                                "example": 123
                            },
                            "name": {
                                "type": "string",
                                "example": "Prestasi"
                            },
                            "slug": {
                                "type": "string",
                                "example": "prestasi"
                            }
                        },
                        "type": "object"
                    },
                    "writer": {
                        "properties": {
                            "id": {
                                "type": "integer",
                                "example": 123
                            },
                            "name": {
                                "type": "string",
                                "example": "Author Name"
                            }
                        },
                        "type": "object"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "id": {
                                    "type": "integer",
                                    "example": 123
                                },
                                "name": {
                                    "type": "string",
                                    "example": "coding"
                                }
                            },
                            "type": "object"
                        }
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
